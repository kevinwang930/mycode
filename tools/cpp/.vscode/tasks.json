{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: clang build & run",
			"command": "E:\\git\\llvm-project\\build\\Release\\bin\\clang.exe",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\a.exe",
				"&&",
				"& ${fileDirname}\\a.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}

	]
}